<h2 class="h2 text-center mb-4">
  <%= title %>
</h2>

<p>
  Enter your email address below and we'll help to find your subdomain.
</p>

<%= simple_form_for(@resource, url: forgot_subdomain_path, html: { method: :post, data: { turbo: false } }) do |f| %>
  <div class="form-inputs">
    <%= f.input(
      :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" }
    ) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me login instructions" %>
  </div>
<% end %>
