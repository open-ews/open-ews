%header{class: "navbar navbar-expand-md d-none d-lg-flex d-print-none"}
  .container-xl
    %button.navbar-toggler{"aria-controls" => "navbar-menu", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbar-menu", "data-bs-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon

    .navbar-nav.flex-row.order-md-last
      .d-none.d-md-flex
        .nav-item
          = link_to url_for(params: request.query_parameters.merge(theme: 'light')), class: "nav-link px-0 hide-theme-light", "data-turbo" => false, title: "Enable light mode" do
            %i.icon.ti.ti-sun
          = link_to url_for(params: request.query_parameters.merge(theme: 'dark')), class: "nav-link px-0 hide-theme-dark", "data-turbo" => false, title: "Enable dark mode" do
            %i.icon.ti.ti-moon
        .nav-item.dropdown
          %a.nav-link.px-0{"aria-label" => "Select language", "data-bs-original-title" => "Select language", "data-bs-toggle" => "dropdown"}
            %i.icon.ti.ti-language
          .dropdown-menu.dropdown-menu-end.dropdown-menu-arrow
            = button_to(dashboard_locale_path(user: { locale: "en" }), class: "dropdown-item", method: :patch) do
              .i.icon.ti
                🇬🇧
              English
            = button_to(dashboard_locale_path(user: { locale: "km" }), class: "dropdown-item", method: :patch) do
              .i.icon.ti
                🇰🇭
              ខែ្មរ
      = render "layouts/dashboard/account_dropdown"

    #navbar-menu
