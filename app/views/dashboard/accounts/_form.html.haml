.card-body
  = simple_form_for(resource, url: dashboard_account_path) do |f|
    = f.input :platform_provider_name, collection: Account::PLATFORM_PROVIDERS.map(&:to_sym), as: :radio_buttons
    = f.input :somleng_account_sid
    = f.input :somleng_auth_token
    = f.input :somleng_api_host
    = f.input :somleng_api_base_url
    = f.input :twilio_account_sid
    = f.input :twilio_auth_token
    = render("shared/key_value_fields", attribute: :settings, f: f)
    .form-group.actions
      = f.button :submit, class: 'btn btn-primary'
