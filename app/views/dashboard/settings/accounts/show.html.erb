<%= render "dashboard/settings/frame" do %>
  <%= simple_form_for(@account, url: dashboard_settings_account_path, wrapper: :input_group) do |f| %>
    <div class="card-header">
      <h2 class="mb-0"><%= title %></h2>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col">
          <%= f.input :name %>
        </div>

        <div class="col">
          <%= f.input :iso_country_code, as: :country %>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%= f.input :logo, as: :file, input_html: { direct_upload: true, accept: Account::LOGO_CONTENT_TYPES.join(", ") } %>
        </div>

        <div class="col">
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%= f.input :somleng_account_sid %>
        </div>
        <div class="col">
          <%= f.input :somleng_auth_token %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :notification_phone_number %>
        </div>
      </div>

      <div class="card border-danger mb-3">
        <div class="card-body">
          <h5 class="card-title">Danger Zone</h5>
          <div class="row">
            <div class="col-md-6">
              <%=
                f.input(
                  :subdomain,
                  hint: "Updating your subdomain will affect other signed in users.",
                  append: ".#{AppSettings.app_uri.host}"
                )
              %>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="card-footer text-end">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
