.card-body
  = show_for(resource) do |f|
    = f.attribute :id
    = f.attribute :email
    = f.attribute :created_at, value: local_time(resource.created_at)
    = f.attribute :last_sign_in_at, value: local_time(resource.last_sign_in_at)
    = f.attribute :invitation_accepted_at, value: local_time(resource.invitation_accepted_at)
