<%= render "dashboard/settings/frame" do %>
  <%= simple_form_for(resource, url: dashboard_account_path) do |f| %>
    <div class="card-header">
      <h2 class="mb-0">Account Settings</h2>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col">
          <%= f.input :somleng_account_sid %>
        </div>
        <div class="col">
          <%= f.input :somleng_auth_token %>
        </div>
      </div>

    </div>

    <div class="card-footer text-end">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
