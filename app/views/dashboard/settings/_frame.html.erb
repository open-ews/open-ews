<div class="card">
  <div class="row g-0">
    <div class="col-12 col-md-2 border-end">
      <div class="card-body">
        <div class="list-group list-group-transparent">
          <%= link_to dashboard_settings_root_path, class: "list-group-item list-group-item-action d-flex align-items-center #{"active" if controller_name == "account"}" do %>
            <span class="nav-link-icon">
              <i class="icon ti ti-settings"></i>
            </span>
            <span class="nav-link-title">
              Account
            </span>
          <% end %>
          <%= link_to dashboard_settings_users_path, class: "list-group-item list-group-item-action d-flex align-items-center #{"active" if controller_name == "users"}" do %>
            <span class="nav-link-icon">
              <i class="icon ti ti-users"></i>
            </span>
            <span class="nav-link-title">
              Users
            </span>
          <% end %>
          <%= link_to dashboard_settings_developers_path, class: "list-group-item list-group-item-action d-flex align-items-center #{"active" if controller_name == "developers"}" do %>
            <span class="nav-link-icon">
              <i class="icon ti ti-device-desktop-code"></i>
            </span>
            <span class="nav-link-title">
              Developers
            </span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-10 d-flex flex-column">
      <%= yield %>
    </div>
  </div>
</div>
