<%= content_for(:page_title) do %>
  <%= title(controller_name: :account_settings, action_name: :index) %>
<% end %>

<%= content_for(:submenu_navigation_links) do %>
  <%= link_to dashboard_settings_root_path, class: "list-group-item list-group-item-action d-flex align-items-center #{"active" if controller_name == "account"}" do %>
    <span class="nav-link-icon">
      <i class="icon ti ti-settings"></i>
    </span>
    <span class="nav-link-title">
      <%= title(controller_name: :accounts, action_name: :show) %>
    </span>
  <% end %>
  <%= link_to(dashboard_settings_users_path, class: "list-group-item list-group-item-action d-flex align-items-center #{"active" if controller_name == "users" || controller_name == "invitations" }") do %>
    <span class="nav-link-icon">
      <i class="icon ti ti-users"></i>
    </span>
    <span class="nav-link-title">
      <%= title(controller_name: :users, action_name: :index) %>
    </span>
  <% end %>
  <%= link_to(dashboard_settings_developer_path, class: "list-group-item list-group-item-action d-flex align-items-center #{"active" if controller_name == "developers"}") do %>
    <span class="nav-link-icon">
      <i class="icon ti ti-device-desktop-code"></i>
    </span>
    <span class="nav-link-title">
      <%= title(controller_name: :developers, action_name: :show) %>
    </span>
  <% end %>
<% end %>

<%= content_for(:frame_content) do %>
  <%= yield %>
<% end %>

<%= render("shared/submenu_frame") %>
