= page_title(title: title)

- content_for(:page_actions) do
  = link_to(translate(:"titles.actions.delete"), dashboard_callout_participation_path(resource), class: 'btn btn-outline-danger', method: :delete, data: { confirm: translate(:"titles.actions.data_confirm") })

- content_for(:related_links) do
  = related_link_to t(:"titles.phone_calls.index"), dashboard_callout_participation_phone_calls_path(resource)

.card-body
  = show_for(resource) do |f|
    = f.attribute :id
    = f.attribute :callout do
      = link_to(resource.callout_id, dashboard_callout_path(resource.callout_id))
    = f.attribute :contact do
      = link_to(resource.contact_id, dashboard_contact_path(resource.contact_id))
    = f.attribute :callout_population do
      - if resource.callout_population_id.present?
        = link_to(resource.callout_population_id, dashboard_batch_operation_path(resource.callout_population_id))
    = f.attribute :call_flow_logic, value: translate("simple_form.options.defaults.call_flow_logic.#{resource.call_flow_logic}")
    = f.attribute :created_at, value: local_time(resource.created_at)
    = f.attribute :metadata do
      %pre
        %code= JSON.pretty_generate(resource.metadata)

