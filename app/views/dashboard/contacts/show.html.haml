= page_title(title: title) do
  -# TODO: Re-enable this once after data migration to native columns
  -# = render("shared/edit_resource_page_action", path: edit_dashboard_contact_path(resource))
  = render("shared/destroy_resource_page_action", path: dashboard_contact_path(resource))

  = render "shared/resource_related_links" do
    = related_link_to t(:"titles.callout_participations.index"), dashboard_contact_callout_participations_path(resource)
    = related_link_to t(:"titles.phone_calls.index"), dashboard_contact_phone_calls_path(resource)

.card-body
  = show_for(resource) do |f|
    = f.attribute :id
    = f.attribute :phone_number
    = f.attribute :created_at, value: local_time(resource.created_at)
    = f.attribute :metadata, value: json_attribute_value(resource.metadata)
