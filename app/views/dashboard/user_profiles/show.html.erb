<%= render("shared/profile_frame") do %>
  <%= simple_form_for(@user, url: dashboard_user_profile_path, html: { data: { turbo: false } }) do |f| %>
    <div class="card-header">
      <h3 class="card-title">Profile</h3>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-12 col-md-6">
          <%= f.input :name %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.input :avatar,
                as: :file,
                input_html: { direct_upload: true, accept: User::ACCEPTED_AVATAR_CONTENT_TYPES.join(",") } %>
        </div>
      </div>
    </div>

    <div class="card-footer text-end">
      <%= f.button :submit %>
    </div>
  <% end %>
<% end %>
