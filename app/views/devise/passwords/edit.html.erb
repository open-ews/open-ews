<h2 class="h2 text-center mb-4"><%= translate(:"titles.user_passwords.edit") %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password,
          label: "New password",
          required: true,
          autofocus: true,
          hint:
            (
              if @minimum_password_length
                "#{@minimum_password_length} characters minimum"
              end
            ),
          input_html: {
            autocomplete: "new-password",
          } %>
  <%= f.input :password_confirmation,
          label: "Confirm your new password",
          required: true,
          input_html: {
            autocomplete: "new-password",
          } %>

  <div class="form-footer">
    <div class="row">
      <div class="col">
        <%= render "devise/shared/links" %>
      </div>

      <div class="col text-end">
        <%= f.button :submit, translate(:"titles.user_passwords.update") %>
      </div>
    </div>
  </div>
<% end %>
