<h2><%= translate(:"titles.user_passwords.new") %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, translate(:"titles.user_passwords.create") %>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col-12">
    <%= render "devise/shared/links" %>
  </div>
</div>
