<%= content_for(:page_title) do %>
  <%= t("devise.invitations.edit.header") %>
<% end %>

<h2 class="h2 text-center mb-4"><%= t("devise.invitations.edit.header") %></h2>

<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { data: { turbo: false } }) do |f| %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <%= f.input :password, input_html: { autofocus: true } %>
    <%= f.input :password_confirmation %>
  <% end %>

  <div class="form-footer">
    <div class="row">
      <div class="col text-end">
        <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: "px-4" %>
      </div>
    </div>
  </div>
<% end %>
