<h1><%= translate(:"titles.user_invitations.edit") %></h1>
<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { data: { turbo: false } }) do |f| %>
  <%= f.hidden_field :invitation_token, readonly: true %>
  <% if f.object.class.require_password_on_accepting %>
    <%= f.input :password, input_html: { autofocus: true } %>
    <%= f.input :password_confirmation %>
  <% end %>

  <div class="row">
    <div class="col-6">
      <%= f.button :submit, class: "px-4" %>
    </div>
  </div>
<% end %>
